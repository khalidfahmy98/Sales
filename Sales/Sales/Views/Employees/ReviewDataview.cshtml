@{
    Layout = null;
}
@model IEnumerable<Sales.Models.EmpListModel>
<table id="datatable" class="table  table-hover table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Customer Name </th>
            <th>Phone</th>
            <th>Address</th>
            <th>Type</th>
            <th>Special</th>
            <th>Grade</th>
            <th>Status</th>
            <th>OPR</th>
        </tr>
    </thead>
    <tbody id="tbodyListner">
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.customers.Name</td>
            <td>@item.customers.Phone</td>
            <td>@item.customers.Address</td>
            <td>@item.customers.Types.Type</td>
            <td>@item.customers.Specials.Name</td>
            <td>
                <input type="text" class="customerId hide" value="@item.customers.Id" />
                <input type="text" class="hide empId" id="emp" value="@item.manEmp.Id" />
                @Html.Action("Select", "Grades", new { Id = item.customers.Id })
            </td>
            <td>
                @if (item.emplist.Status == 1)
                {
                    <span style="color:green"> Approved</span>
                }
                else
                {
                    <span> Pending</span>
                }
            </td>
            <td><button class="btn btn-xs btn-danger" onclick="Del(@item.emplist.Id , @item.emplist.EmployeeId)"><i class="fa fa-times"></i></button></td>
        </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#datatable').DataTable();
    });
</script>