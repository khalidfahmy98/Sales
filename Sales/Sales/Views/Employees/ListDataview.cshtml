@{
    Layout = null;
}
@model IEnumerable<Entity.Customers>
<table id="datatable" class="table  table-hover table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>#</th>
            <th>Customer Name </th>
            <th>Phone</th>
            <th>Address</th>
            <th>Type</th>
            <th>Special</th>
        </tr>
    </thead>
    <tbody id="tbodyListner">
        @foreach (var item in Model)
        {
        <tr>
            <td><input type="checkbox"  value="@item.Id" name="customers" class="customers"/></td>
            <td>@item.Name</td>
            <td>@item.Phone</td>
            <td>@item.Address</td>
            <td>@item.Types.Type</td>
            <td>@item.Specials.Name</td>
        </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#datatable').DataTable();
    });
</script>