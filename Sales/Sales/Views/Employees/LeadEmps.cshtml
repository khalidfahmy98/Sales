@model IEnumerable<Entity.ManEmp>
<div class="panel">
    <div class="panel-heading">
        My Registered Employees
    </div>
    <div class="panel-body">
        <table id="datatable" class="table  table-hover table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>#</th>
                    <th>National Id</th>
                    <th>Full Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Status</th>
                    <th>OPR</th>
                </tr>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.NationalId</td>
                    <td>@item.Name</td>
                    <td>@item.Username</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>
                        @if (Convert.ToInt32(item.Status) == 1)
                        {
                            <span style="color:green;">Approved</span>
                        }
                        else
                        {
                            <span >Pending</span>
                        }
                    </td>
                    <td> <button class="btn btn-xs btn-danger" onclick="Del('@item.Id' , this )"><i class="fa fa-times"></i></button></td>
                </tr>
                }
            </tbody>
        </table>
        <div class="alert hide" id="errorHandler"></div>
    </div>
</div>
<script src="~/Scripts/Employees/Operations.js"></script>