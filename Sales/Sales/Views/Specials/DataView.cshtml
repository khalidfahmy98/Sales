@{
    Layout = null;
}
@model IEnumerable<Entity.Specials>
<table id="datatable" class="table  table-hover table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>#</th>
            <th>Special Name</th>
            <th>Comment</th>
            <th>OPR</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Comment</td>
                <td>
                    <button class="btn btn-xs btn-danger" onclick="Del('@item.Id' , this )"><i class="fa fa-times"></i></button>
                    <button class="btn btn-xs btn-warning" onclick="Edit('@item.Id' , '@item.Name' , '@item.Comment' )"><i class="fa fa-edit"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#datatable').DataTable();
    });
</script>