<div class="panel">
    <div class="panel-heading">
        Assign Grade For Customer
    </div>
    <div class="panel-body">
        <div class="row">
            <input type="hidden" id="id" value="@Convert.ToInt32(Session["UserID"])" />
            <div class="col-md-3 col-sm-3 col-xs-12 form-group">
                <label>Employee</label>
                @Html.Action("Select", "Employees")
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12 form-group">
                <label>Customer Name</label>
                @Html.Action("Select", "Customers")
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12 form-group">
                <label>Grade</label>
                @Html.Action("Select", "Grades")
            </div>
        </div>
        <button class="btn btn-sm btn-primary" onclick="Add()"> Assign Grade </button>
        <div class="alert hide" id="errorHandler"></div>
    </div>
</div>
<div class="panel">
    <div class="panel-heading">
        Grades Assigned For Customers
    </div>
    <div class="panel-body">
        <div id="View"></div>
    </div>
</div>
<script type="text/javascript" src="~/Scripts/CustomerBridgeGrade/Operations.js"></script>
<script type="text/javascript" src="~/Scripts/CustomerBridgeGrade/Add.js"></script>
