@{
    Layout = null;
}
@model IEnumerable<Sales.Models.EmpListModel>
<table id="datatable" class="table  table-hover table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>#</th>
            <th>Employee</th>
            <th>Customer</th>
            <th>OPR</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
        <tr>
            <td>@item.emplist.Id</td>
            <td>@item.manEmp.Name</td>
            <td>@item.customers.Name</td>
            <td><button class="btn btn-xs btn-success" onclick="ApproveList(@item.emplist.Id)"><i class="fa fa-check"></i></button></td>
        </tr>
            }
        </tbody>
    </table>
<script>
    $(document).ready(function () {
        $('#datatable').DataTable();
    });
</script>