@{
    Layout = null;
}
@model IEnumerable<Entity.Scheduale>
<table id="datatable" class="table  table-hover table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Customer </th>
            <th>Product</th>
            <th>Coaching</th>
            <th>Contact Ways</th>
            <th>Gifts</th>
            <th>Avaliability</th>
            <th>Comment</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="datarecord">
                <td> @* 0 *@
                    <span data-customerid="@item.CustomerId" class=" customer"> @item.Customers.Name </span>
                    <input type="text" class="form-control input-sm altCustomer Validate" placeholder="اسم الدكتور الموجود بالعيادة" />
                </td>
                <td style="height:150px;overflow-y:scroll;">
                    @* 1 *@
                    @foreach (var product in BLL.ProductsBLL.List().ToList())
                    {
                        <label> @product.Name </label>
                        <input type="number" class="form-control input-sm productQuantity Validate" data-product="@product.Id" min="0" max="3" />
                        <br />
                    }
                </td>
                <td>
                    @* 2 *@
                                <select class="form-control input-sm coaching ">
                                    <option value="0" selected> None </option>
                                    <option value="1"> DM </option>
                                    <option value="2"> LM </option>
                                    <option value="3"> Other </option>
                                </select>
                            </td>
                <td>
                    @* 3*@
                                <select class="form-control input-sm contactways">
                                    <option value="Face to Face " selected> Face to Face </option>
                                    <option value="Phone"> Phone </option>
                                    <option value="Meeting"> Meeting </option>
                                </select>
                            </td>
                <td>
                    @* 4*@
                    <input type="text" class="form-control input-sm gift Validate" />
                </td>
                <td>
                    @* 5*@
                                <select class="form-control input-sm availabilty">
                                    <option value="0" selected> Availabile   </option>
                                    <option value="1"> inVacation  </option>
                                    <option value="2"> inConference  </option>
                                    <option value="3"> Prohibiting Visit </option>
                                </select>
                            </td>
                <td>
                    @* 6 *@
                                <input type="text" class="form-control input-sm comment" />
                            </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#datatable').DataTable();
    });
</script>