
@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}
<section class="container-fluid authFormWrapper ">
    <div class="authform">
        <header>
            <img class="img-responsive center-block" src="~/Imgs/apple-touch-icon.png">
            <h4>
                WELCOME BACK
            </h4>
        </header>
        <div class="form-group relativeGroup">
            <label>
                Username
            </label>
            <input type="text" class="form-control input-sm" id="username">
        </div>
        <div class="form-group">
            <label>
                Password
            </label>
            <input type="password" class="form-control input-sm" id="password">
        </div>
        <div class="form-group">
            <button type="button" class="bttn bttn-default" onclick="Login()">
                Login
            </button>
            <div class="alert alert-danger hide" id="errorHandler"></div>
        </div>
    </div>
</section>
<script src="~/Scripts/Login/Operations.js"></script>

