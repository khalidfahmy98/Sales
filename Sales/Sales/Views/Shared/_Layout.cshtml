<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta name="msapplication-tap-highlight" content="no">
    <meta content="" name="descriptison">
    <meta content="" name="keywords">
    <title>@ViewBag.Title | HR System </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header closed-sidebar">
        <div class="app-header header-shadow bg-light header-text-dark">
            <div class="app-header__logo">
                <div class="logo-src"></div>
                <div class="header__pane ml-auto">
                    <div>
                        <button class="hamburger close-sidebar-btn hamburger--elastic" type="button" data-class="closed-sidebar"><span class="fa fa-bars" style="font-size:20px;"></span></button>
                    </div>
                </div>
            </div>
            <div class="app-header__mobile-menu">
                <div>
                    <button class="hamburger hamburger--elastic mobile-toggle-nav" type="button"><span class="hamburger-box"><span class="hamburger-inner"></span></span></button>
                </div>
            </div>
            <div class="app-header__menu">
                <span>
                    <button class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav" type="button"><span class="btn-icon-wrapper"><i class="fa fa-ellipsis-v fa-w-6"></i></span></button>
                </span>
            </div>
            <div class="app-header__content">
                <div class="app-header-right">
                </div>
                <div class="app-header-left">
                    <div class="header-btn-lg pr-0">
                        <div class="widget-content p-0">
                            <div class="widget-content-wrapper">
                                <div class="widget-content-left  ml-3 header-user-info">
                                    <div class="widget-heading">@Session["Username"]</div>
                                    <div class="widget-subheading">
                                        @if (Convert.ToInt32(Session["Rule"]) == 0)
                                        {
                                            <span>Manager</span>
                                        }
                                        else
                                        {
                                            <span>Editor</span>
                                        }
                                    </div>
                                </div>
                                <div class="widget-content-left">
                                    <div class="btn-group">
                                        <a class="p-0 btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img class="rounded-circle" width="42" src="~/Imgs/avatarPic.png" alt=""><i class="fa fa-angle-down ml-2 opacity-8"></i></a>
                                        <div class="dropdown-menu dropdown-menu-left" tabindex="-1" role="menu" aria-hidden="true">
                                            <a class="dropdown-item" type="button" href="~/Home/UserProfile" tabindex="0">Account Settings </a>
                                            <div class="dropdown-divider" tabindex="-1"></div>
                                            <a class="dropdown-item" type="button" href="~/Home/Logout" tabindex="0">Logout </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="app-main">
            <div class="app-sidebar sidebar-shadow bg-primary sidebar-text-light">
                <div class="app-header__logo">
                    <div class="logo-src"></div>
                    <div class="header__pane ml-auto">
                        <div>
                            <button class="hamburger close-sidebar-btn hamburger--elastic" type="button" data-class="closed-sidebar"><span class="hamburger-box"><span class="hamburger-inner"></span></span></button>
                        </div>
                    </div>
                </div>
                <div class="app-header__mobile-menu">
                    <div>
                        <button class="hamburger hamburger--elastic mobile-toggle-nav" type="button"><span class="hamburger-box"><span class="hamburger-inner"></span></span></button>
                    </div>
                </div>
                <div class="app-header__menu">
                    <span>
                        <button class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav" type="button"><span class="btn-icon-wrapper"><i class="fa fa-ellipsis-v fa-w-6"></i></span></button>
                    </span>
                </div>
                <div class="scrollbar-sidebar">
                    <div class="app-sidebar__inner">
                        <ul class="vertical-nav-menu">
                            <li class="app-sidebar__heading">Main System</li>
                            <li><a class="mm-active" href="~/Home/"><i class="metismenu-icon pe-7s-home"> </i>Homepage </a></li>
                            @{
                                if (Convert.ToInt32(Session["Rule"]) == 0)
                                {
                                    <li><a href="~/QrCode/"><i class="metismenu-icon pe-7s-server"> </i>QR Code </a></li>
                                    <li class="app-sidebar__heading">Dashboard Controls</li>
                                    <li>
                                        <a href="#"><i class="metismenu-icon pe-7s-user"></i>Moderators Management <i class="metismenu-state-icon pe-7s-angle-down caret-left"></i></a>
                                        <ul>
                                            <li><a href="~/Moderators/"><i class="metismenu-icon"> </i>Register Moderator</a></li>
                                            <li><a href="~/Moderators/Operations"><i class="metismenu-icon"> </i> Moderators Operations     </a></li>
                                        </ul>
                                    </li>
                                }
                            }
                            <li>
                                <a href="#"><i class="metismenu-icon pe-7s-users"></i>Employees Management <i class="metismenu-state-icon pe-7s-angle-down caret-left"></i></a>
                                <ul>
                                    <li><a href="~/Employees/"><i class="metismenu-icon"> </i>Register Employee</a></li>
                                    <li><a href="~/Employees/Operations"><i class="metismenu-icon"> </i> Employees Operations </a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="#"><i class="metismenu-icon pe-7s-users"></i>Jobs Management <i class="metismenu-state-icon pe-7s-angle-down caret-left"></i></a>
                                <ul>
                                    <li><a href="~/Job/"><i class="metismenu-icon"> </i>Post Jobs</a></li>
                                    <li><a href="~/Job/Operations"><i class="metismenu-icon"> </i> Proposals </a></li>
                                </ul>
                            </li>
                            <li><a href="~/Categories/"><i class="metismenu-icon pe-7s-browser"> </i>Work Categories </a></li>
                            <li><a href="~/Departments/"><i class="metismenu-icon pe-7s-disk"> </i> Departments </a></li>
                            <li class="app-sidebar__heading"> Finance</li>
                            @{
                                if (Convert.ToInt32(Session["Rule"]) == 0)
                                {
                                    <li><a href="~/Invoices/"><i class="metismenu-icon pe-7s-credit"> </i> Create Invoice </a></li>
                                }
                            }
                            <li class="app-sidebar__heading">System Reports</li>
                            <li><a href="~/Attendance/"><i class="metismenu-icon pe-7s-file"> </i> Attendance Report </a></li>
                            <li><a href="~/Invoices/Operations"><i class="metismenu-icon pe-7s-credit"> </i> Invoices Report </a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="app-main__outer">
                <div class="app-main__inner">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</body>
</html>
