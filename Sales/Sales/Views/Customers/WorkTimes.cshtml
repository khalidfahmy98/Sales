@model Entity.Customers
<div class="panel">
    <div class="panel-heading">
        Assign ( @Model.Name ) Customer Work Times 
    </div>
    <div class="panel-body">
        <div class="row">
            <input type="hidden" id="id" value="@Model.Id" />
            <div class="col-md-3 col-sm-3 col-xs-12 form-group">
                <label> Day </label>
                <select class="form-control input-sm" id="day">
                    <option value="0">Friday</option>
                    <option value="1">Saturday</option>
                    <option value="2">Sunday</option>
                    <option value="3">Monday</option>
                    <option value="4">Tuesday</option>
                    <option value="5">Wednesday</option>
                    <option value="6">Thuresday</option>
                </select>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12 form-group">
                <label>Time</label>
                <input type="text" class="form-control input-sm" id="time" />
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12 form-group">
                <label>Comment</label>
                <input type="text" class="form-control input-sm" id="comment" />
            </div>
        </div>
        <button class="btn btn-sm btn-primary" onclick="Add()"> Assign New Work Time </button>
        <div class="alert hide" id="errorHandler"></div>
    </div>
</div>
<div class="panel">
    <div class="panel-heading">
        Work Times Management 
    </div>
    <div class="panel-body">
        <div id="View"></div>
    </div>
</div>
<script type="text/javascript" src="~/Scripts/Customers/worktimes.js"></script>
