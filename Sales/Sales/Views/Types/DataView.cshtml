@{
    Layout = null;
}
@model IEnumerable<Entity.Types>
<table id="datatable" class="table  table-hover table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>#</th>
            <th>Type Name </th>
            <th>Work Type</th>
            <th>No. Of Visits</th>
            <th>Color Hexa</th>
            <th>Color Preview</th>
            <th>OPR</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Type</td>
            <td>
                @if (Convert.ToInt32(item.Condition) == 0)
                {
                    <span>Half Day</span>
                }
                else
                {
                    <span>Full Day</span>
                }
            </td>
            <td>@item.NoVisits</td>
            <td>@item.Colors.Hexa</td>
            <td><span style="display:block;width:40px;height:25px;padding:10px;background-color:@item.Colors.Hexa"></span></td>
            <td>
                <button class="btn btn-xs btn-danger" onclick="Del('@item.Id' , this )"><i class="fa fa-times"></i></button>
                <button class="btn btn-xs btn-warning" onclick="Edit('@item.Id', '@item.Type', '@item.Condition', '@item.NoVisits', '@item.ColorId')"><i class="fa fa-edit"></i></button>

            </td>
        </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#datatable').DataTable();
    });
</script>